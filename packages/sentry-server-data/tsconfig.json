{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es2015",
        "noEmit": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}