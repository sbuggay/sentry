{
    "extends": "tslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "ordered-imports": [
            false
        ],
        "object-literal-sort-keys": false,
        "trailing-comma": [
            false
        ],
        "indent": [
            "error",
            "space"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}