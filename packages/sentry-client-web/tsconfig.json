{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "noEmit": true,
        "types": [
            "jest"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "test"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}