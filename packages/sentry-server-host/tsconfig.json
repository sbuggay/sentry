{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6"],
        "outDir": "dist",
        "types": [
            "node",
            "jest"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}